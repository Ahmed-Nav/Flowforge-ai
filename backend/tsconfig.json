{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",             
    "target": "es2020",                     
    "lib": ["es2020"],                      
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"], 
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "strict": false,                        
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}